<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_stats_full">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/crearJugadas"
            android:id="@+id/crearJugadas"
            android:background="@drawable/btn_deshacer"
            android:textColor="@color/colorLetraBtn"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_weight="1"
            android:layout_marginBottom="40dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/verJugadas"
            android:id="@+id/verJugadas"
            android:background="@drawable/btn_deshacer"
            android:textColor="@color/colorLetraBtn"
            android:layout_marginBottom="40dp"
            android:textSize="18sp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/volver"
        android:id="@+id/volver"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:textColor="@color/colorLetraBtn"
        android:textSize="25sp"
        android:background="@drawable/btn_deshacer" />
</LinearLayout>