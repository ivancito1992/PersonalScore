<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_stats_full">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:background="@drawable/btn_deshacer"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nombreLocal"
            android:id="@+id/nombreLocal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorLocal"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="50sp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/escribirLocal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorLocal"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="45sp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:maxLength="15"
            android:backgroundTint="@color/colorLocal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nombreVisitante"
            android:id="@+id/nombreVisitante"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorVisitante"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="50sp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/escribirVisitante"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorVisitante"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="45sp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:maxLength="15"
            android:backgroundTint="@color/colorVisitante" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/nombreJugador"
            android:id="@+id/nombreJugador"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorLetraBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="50sp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/escribirJugador"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorLetraBtn"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="45sp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:maxLength="15"
            android:singleLine="false"
            android:backgroundTint="#ffffff" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/comenzar"
        android:id="@+id/comenzar"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textColor="@color/colorLetraBtn"
        android:textSize="40sp"
        android:background="@drawable/btn_deshacer" />

</LinearLayout>