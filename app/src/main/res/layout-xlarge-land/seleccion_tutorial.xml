<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_stats_full">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/tutestadistico"
            android:id="@+id/tutEstadisticas"
            android:background="@drawable/btn_deshacer"
            android:textColor="@color/colorLetraBtn"
            android:layout_marginBottom="90dp"
            android:textSize="35dp"
            android:layout_weight="1"
            android:layout_marginTop="90dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/tutjugadas"
            android:id="@+id/tutJugadas"
            android:background="@drawable/btn_deshacer"
            android:textColor="@color/colorLetraBtn"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="90dp"
            android:textSize="35dp"
            android:layout_weight="1"
            android:layout_marginBottom="90dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/volver"
        android:id="@+id/volver"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:textColor="@color/colorLetraBtn"
        android:textSize="40sp"
        android:background="@drawable/btn_deshacer" />
</LinearLayout>