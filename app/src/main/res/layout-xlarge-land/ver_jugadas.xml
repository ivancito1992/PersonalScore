<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_stats_full">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/buscarJugadas"
            android:id="@+id/cargarImagen"
            android:background="@drawable/btn_deshacer"
            android:textColor="@color/colorLetraBtn"
            android:textSize="30sp"
            android:layout_weight="2"
            android:longClickable="false"
            android:singleLine="false"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/visorJugada"
            android:layout_weight="14"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/volver"
            android:id="@+id/volver"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorLetraBtn"
            android:textSize="40sp"
            android:background="@drawable/btn_deshacer" />
    </LinearLayout>
</LinearLayout>