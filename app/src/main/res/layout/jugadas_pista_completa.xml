<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JugadasMediaPista">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btnDeshacer">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vista"
            android:id="@+id/cvAmedia"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/btn_jugadas_accion" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/borrar"
            android:id="@+id/borrarPistaCompleta"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/btn_jugadas_accion" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/btnDeshacer">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugada1"
                android:id="@+id/jugada1Completa"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@drawable/btn_jugadas_accion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugada2"
                android:id="@+id/jugada2Completa"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@drawable/btn_jugadas_accion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugada3"
                android:id="@+id/jugada3Completa"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@drawable/btn_jugadas_accion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugada4"
                android:id="@+id/jugada4Completa"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@drawable/btn_jugadas_accion" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugada5"
                android:id="@+id/jugada5Completa"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="@drawable/btn_jugadas_accion" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.ivanb.personalscore.Pintar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/paraPintarPistaCompleta"
                android:background="@drawable/pista_completa" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/num1completa"
                android:background="@drawable/numero_1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/num2completa"
                android:background="@drawable/numero_2"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/num1media"
                android:layout_marginStart="65dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/num3completa"
                android:background="@drawable/numero_3"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/num4completa"
                android:background="@drawable/numero_4"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/num5media"
                android:layout_marginEnd="52dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/num5completa"
                android:background="@drawable/numero_5"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
